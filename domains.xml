<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:theme="@style/Noaction"
    android:background="@drawable/image">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/linearLayout"></LinearLayout>

    <ImageButton

        android:id="@+id/imageButton"
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:background="@drawable/c" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton2"
        android:background="@drawable/java"
        android:layout_below="@+id/linearLayout"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/imageButton" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="75dp"
        android:id="@+id/imageButton3"
        android:background="@drawable/webtech"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/imageButton2"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/imageButton4"
        android:background="@drawable/dbms_users"
        android:layout_alignEnd="@+id/imageButton2"
        android:layout_alignBottom="@+id/imageButton3" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/osh"
        android:background="@drawable/os_installation"
        android:layout_below="@+id/imageButton3"
        android:layout_alignParentStart="true"
        android:layout_marginTop="58dp" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/ss"
        android:layout_alignBottom="@+id/osh"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ss" />

    <ImageButton
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/icn"
        android:layout_below="@+id/osh"
        android:layout_centerHorizontal="true"
        android:background="@drawable/cn" />

</RelativeLayout>
